<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/homeWalkingMapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/homeButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_behavior="ru.pasha.feature.home.internal.view.TopButtonsBehaviour">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/homeBackButton"
            style="@style/Theme.Walking.Button"
            android:layout_width="48dp"
            android:layout_margin="8dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_back_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/homeMarkerButton"
            style="@style/Theme.Walking.Button"
            android:layout_width="48dp"
            android:layout_margin="8dp"
            android:tint="?attr/walking_app_color_default_800"
            android:layout_height="48dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_default_marker_32" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/homeBuildRouteButton"
            style="@style/Theme.Walking.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_build_route_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/homeLocationButton"
            style="@style/Theme.Walking.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_location_24" />

    </LinearLayout>

    <ru.pasha.feature.home.internal.view.HomeBottomSheetView
        android:id="@+id/homeBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:behavior_hideable="false"
        app:behavior_peekHeight="64dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />

    <ru.pasha.feature.home.internal.view.TopPanelView
        android:id="@+id/homeTopPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?attr/walking_app_color_default_100"
        app:layout_behavior="ru.pasha.feature.home.internal.view.TopPanelBehaviour">

        <ru.pasha.feature.home.internal.view.CategoriesWidgetView
            android:id="@+id/homeCategoriesWidget"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ru.pasha.feature.home.internal.view.TopPanelView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/homeStartButton"
        style="@style/Theme.Walking.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:animateLayoutChanges="true"
        android:text="Начать"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_behavior="ru.pasha.feature.home.internal.view.StartButtonBehaviour" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>