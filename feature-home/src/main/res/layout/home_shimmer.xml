<?xml version="1.0" encoding="utf-8"?>
<ru.pasha.common.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/walking_app_color_default_300">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ru.pasha.common.ShimmerView
            android:id="@+id/homeTabsShimmer"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cornerRadius="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeType="rectangle"
            app:shimmerColor="?attr/walking_app_color_default_100" />

        <ru.pasha.common.ShimmerView
            android:id="@+id/homeItemShimmer1"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="24dp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeTabsShimmer"
            app:shapeType="rectangle"
            app:shimmerColor="?attr/walking_app_color_default_100" />

        <ru.pasha.common.ShimmerView
            android:id="@+id/homeItemShimmer2"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeItemShimmer1"
            app:shapeType="rectangle"
            app:shimmerColor="?attr/walking_app_color_default_100" />

        <ru.pasha.common.ShimmerView
            android:id="@+id/homeItemShimmer3"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeItemShimmer2"
            app:shapeType="rectangle"
            app:shimmerColor="?attr/walking_app_color_default_100" />

        <ru.pasha.common.ShimmerView
            android:id="@+id/homeShimmerBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/homeItemShimmer3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeType="rectangle"
            app:shimmerColor="?attr/walking_app_color_default_100" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ru.pasha.common.ShimmerFrameLayout>