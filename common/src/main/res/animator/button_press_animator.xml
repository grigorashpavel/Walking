<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="backgroundColor"
                android:duration="100"
                android:valueFrom="?attr/buttonNormalColor"
                android:valueTo="?attr/buttonPressedColor"
                android:valueType="colorType"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="backgroundColor"
                android:duration="100"
                android:valueFrom="?buttonPressedColor"
                android:valueTo="?buttonNormalColor"
                android:valueType="colorType"/>
        </set>
    </item>
</selector>
